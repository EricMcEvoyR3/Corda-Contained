# Base image from (http://phusion.github.io/baseimage-docker)
FROM openjdk:8u151-jre-alpine

RUN apk upgrade --update && \
    apk add --update --no-cache bash iputils nfs-utils nss curl netcat-openbsd && \
    rm -rf /var/cache/apk/* && \
    # Add user to run the app && \
    addgroup corda && \
    adduser -G corda -D -s /bin/bash corda && \
    # Create /opt/corda/doorman directory && \
	mkdir -p /opt/corda/doorman/persistent && \
	mkdir -p /opt/corda/doorman/persistent/logs


ADD --chown=corda:corda doorman.jar /opt/corda/doorman/doorman.jar
ADD --chown=corda:corda log4j2-enm.xml /opt/corda/doorman/log4j2.xml

# Permissioning
RUN chown -R corda:corda /opt/corda

# Working directory for Doorman
WORKDIR /opt/corda/doorman
ENV HOME=/opt/corda/doorman
USER corda

EXPOSE 10000


# Start it
CMD java -Dlog4j.configurationFile=file:/opt/corda/doorman/log4j2.xml -jar doorman.jar --config-file ./persistent/doorman.conf --ignore-migration